<div class="container mt-5">
  <h2 class="text-center">New Cocktail</h2>
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <%=simple_form_for @cocktail do |f|%>
      <%=f.input :name%>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: "btn btn-primary"%>
      <%end%>
    </div>
  </div>
</div>
