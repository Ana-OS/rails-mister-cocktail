<div class="cocktail-profile">
  <div class="container">
    <div class="cocktail-name"><%= @cocktail.name %></div>

    <div class="row cocktail-wrapper">
      <div class="d-flex flex-wrap col-sm-12 col-md-12">
        <div class="col-6 mt-5">
          <%= cl_image_tag @cocktail.photo.key, width:300, height:400 %>
        </div>
        <table class="table table-bordered col-6 mt-5">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
              <th>Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash" style="color: black"></i>
                  <% end %>
                  <span>
                  <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
                    <i class="fa fa-pen" style="color: black"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        <div class="col-md-1 back-btn">
         <%=link_to "Back", root_path, class: 'btn-ghost-cocktail'%>
        </div>
      <div class="col-sm-12 col-md-6 mt-5 ">
        <h3>Reviews for this Cocktail</h3>
        <ul class="list-unstyled">
          <% @cocktail.reviews.sample(2).each do |review| %>
         <li><%= review.content %></li>
         <% end %>
        </ul>
      </div>
    </div>
</div>




