<div class="container col-6 mt-5">
  <div class="d-flex flex-wrap p-2">
    <% current_user.reviews.each do |review| %>
      <div class="mt-5 mb-5 review-card">
        <h4>Review for <%= review.cocktail.name%> </h4>
        <p><%= review.content %></p>
        <div class="d-flex mt-5">
          <div class="btn-ghost-review back"><%= link_to "Back", root_path%></div>
           <div class="btn-ghost-review delete "><%= link_to "Delete", review_path(review), method: :delete%></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

